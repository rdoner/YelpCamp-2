<% include ../partials/header %>


    <div class="row">
        <h1 style="text-align: center">Create a new campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Yosemite">
                </div>                
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="price" placeholder="$0.00" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" 
                        title="Only images from images.unsplash.com allowed. See link below for instructions." 
                        placeholder="https://images.unsplash.com/..." required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" placeholder="Californiaâ€™s Sierra Nevada mountains.">
                </div>
                <div class="form-group">
                    <button class="btn btn-lrg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
             <a href="/campgrounds">Go back</a>
        </div>
    </div>


<% include ../partials/footer %>
